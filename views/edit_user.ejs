<form action="/update/<%=user._id%>" method="POST" class="my-form">
    <link rel="stylesheet" href="/stylesheets/input.css"> 

  <div class="form-group">
    <label>Name</label>
    <input value="<%= user.name %>" type="text" name="name">
  </div>

  <div class="form-group">
    <label>Age</label>
    <input value="<%= user.age %>" type="number" name="age">
  </div>

  <div class="form-group">
    <label>Height (cm)</label>
    <input value="<%= user.height %>" type="number" name="height">
  </div>

  <div class="form-group">
    <label>Choose Your Position</label>
    <select name="position" required>
      <option value="<%= user.position %>" selected disabled><%= user.position %></option>
      <option value="bowler">Bowler</option>
      <option value="batter">Batter</option>
      <option value="all-rounder">All Rounder</option>
    </select>
  </div>

  <div class="form-group">
    <label>Comments</label>
    <textarea name="comments"><%= user.comments %></textarea>
  </div>

  <button type="submit" class="submit-btn">Update User</button>

</form>